{
	"name": "aristath/wp-dbal",
	"description": "Database abstraction layer for WordPress using Doctrine DBAL. Enables WordPress to work with MySQL, PostgreSQL, SQLite, and custom storage backends.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Ari Stathopoulos",
			"email": "aristath@gmail.com"
		}
	],
	"require": {
		"php": ">=8.1",
		"doctrine/dbal": "^4.0",
		"phpmyadmin/sql-parser": "^5.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.0",
		"yoast/phpunit-polyfills": "^2.0",
		"wp-phpunit/wp-phpunit": "^6.4",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"phpstan/phpstan": "^1.10",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"phpstan/extension-installer": "^1.3",
		"php-stubs/wordpress-stubs": "^6.4",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"friendsofphp/php-cs-fixer": "^3.0",
		"mockery/mockery": "^1.6",
		"brain/monkey": "^2.6"
	},
	"autoload": {
		"psr-4": {
			"WP_DBAL\\": "includes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"WP_DBAL\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"check-cs": "phpcs --standard=phpcs.xml",
		"fix-cs": [
			"phpcbf --standard=phpcs.xml",
			"php-cs-fixer fix --allow-risky=yes"
		],
		"phpstan": "phpstan analyse --memory-limit=1G",
		"check": [
			"@check-cs",
			"@phpstan"
		],
		"test": "phpunit",
		"test:unit": "phpunit --testsuite=unit",
		"test:integration": "phpunit --testsuite=integration"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true
		},
		"sort-packages": true
	}
}
